//检索条件
//condition显示条件位置的ID,行业信息位置ID,op1,城市信息位置ID,op2,交易方式位置IDop3
function  retrieveCondition (condition,op1,op2,op3) {
	$("#" + condition).empty();
	if(op1 != ""){
		$($("#" + op1).children()).each(function(){
			var text = $(this).text();
			if($(this).attr("class") == "hover"){
				var p1 = $("<a href='javascript:;'></a>");
				p1.html(text + "<i>x</i>");
				$("#" + condition).append(p1);
			}
		})
	}
	if(op2 != ""){
		$($("#" + op2).children()).each(function(){
			var text = $(this).text();
			if($(this).attr("class") == "hover"){
				var p2 = $("<a href='javascript:;'></a>");
				p2.html(text + "<i>x</i>");
				$("#" + condition).append(p2);
			}
		})
	}
}
//---------扩展表单校验规则
if (jQuery.validator) {
	jQuery.validator.addMethod("mobile", function(value, element) {
		var tel = /^1[3|4|5|7|8]{1}[\d]{9}$/;
		return this.optional(element) || (tel.test(value));
	}, "请正确填写您的手机号");
	jQuery.validator.addMethod("password", function(value, element) {
		var tel = /^[a-zA-Z0-9~!@#$%^&*()_+\-={}:;<>?,.\/]{6,16}$/;
		return this.optional(element) || (tel.test(value));
	}, "您输入的密码格式不正确");
}